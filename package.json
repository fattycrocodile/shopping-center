{
  "name": "mailing-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "preconstruct build && cp -R packages/cli/src/generator_templates packages/cli/dist && cp -R packages/cli/src/preview/static packages/cli/dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublish": "yarn build",
    "watch": "preconstruct watch",
    "release": "preconstruct build && yarn publish",
    "postinstall": "preconstruct dev",
    "init:dev": "./scripts/init_dev"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "homepage": "https://github.com/psugihara/reaction-mailer#readme",
  "devDependencies": {
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@changesets/cli": "^2.23.0",
    "@preconstruct/cli": "^2.1.5",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.18.5",
    "@babel/preset-env": "^7.18.2"
  }
}
